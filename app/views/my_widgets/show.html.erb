<h3>My Widgets</h3>
<%= link_to 'New Widget', new_widget_path %>

<% if @widgets.present? %>
  <table class="table mt-3">
    <thead>
      <tr>
        <th scope="col">id</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th colspan="2">
      </tr>
    </thead>
    <tbody>
      <% @widgets.each do |widget| %>
        <tr>
          <td><%= widget.id %></th>
          <td><%= widget.name %></td>
          <td><%= widget.description %></td>
          <td><%= link_to 'Edit', edit_widget_path(widget.id) %></td>
          <td><%= link_to 'Delete', widget_path(widget.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class='mt-3'>No widgets for this user</p>
<% end %>