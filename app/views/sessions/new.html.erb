<h3>Log in</h3>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <div class='form-group'>
        <%= f.label :email %>
        <%= f.email_field :username, class: 'form-control', required: true %>
      </div>

      <div class='form-group'>
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control', required: true %>
      </div>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p class='mt-2'>Not resgistered? <%= link_to "Sign up here!", signup_path %></p>
  </div>
</div>